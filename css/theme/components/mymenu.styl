.mymenu
    .head &
        .ul--0
            display: flex
            margin: 0 -20px

        .li--0
            margin: 0 20px

        .a--0
            display: flex
            align-items: center
            height: 38px
            text-transform: uppercase
            font-weight: regular
            font-size: 11px

        .red
            .a--0
                color: var(--secundary)
                font-weight: bold

    .footer &
        .li--0
            margin-bottom: 0

        .a--0
            color: var(--tertiary)
            font-weight: regular
            font-size: 21px