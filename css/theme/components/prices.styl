
.price-box
    .products__main &
        margin-top: 15px
        margin-bottom: 0

        .old-price
            display: none !important

        .regular-price, .special-price, .minimal-price
            .label
                display: none

            .price
                &:before
                    content: 'De '

                &:after
                    content: ' por'

                &, span
                    color: var(--tertiary)
                    font-weight: regular
                    font-size: 14px

.price-box-avista
    .products__main &
        display: flex
        flex-flow: row wrap
        justify-content: flex-start
        margin-bottom: 0
        line-height: 1.3

        .price
            flex: 0 0 100%
            order: -1
            color: var(--secundary)
            font-weight: semibold
            font-size: 22px

        .label
            color: var(--tertiary)
            font-weight: regular
            font-size: 14px

.price-box-parcelado
    .preco-parcelado
        .products__main &
            color: var(--primary)
            font-size: 14px
            line-height: 1.3

            &:before
                content: 'ou '

            &:after
                content: 's/ juros'

            .num
                color: var(--primary)
                font-weight: regular

            .value span
                color: var(--primary)
                font-weight: bold
                font-size: 17px

            .s-juros
                display: none
